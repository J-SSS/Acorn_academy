<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>sumServlet</servlet-name>
        <servlet-class>com.example.webapptest.servlet.L01SumRequest</servlet-class>
    </servlet>
    <!--servlet-mapping; 해당 서블릿에 배포될 주소를 부여(리소스가 됨 : 주소가 존재하는 소스= 리소스)-->
    <servlet-mapping>
        <servlet-name>sumServlet</servlet-name>
        <url-pattern>/sum.do</url-pattern>
        <!--/슬러시의 의미 : 서버에서부터 시작한다 -->
        <!--/url : 서버주소에서부터 url시작한다 -->
    </servlet-mapping>
</web-app>