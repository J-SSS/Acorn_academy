extends ../layout
block content
    ul
        li
            a(href="/users/list.do?permission=USER") 일반
        li
            a(href="/users/list.do?permission=SILVER") 실버
        li
            a(href="/users/list.do?permission=GOLD") 골드
        li
            a(href="/users/list.do?permission=PRIVATE") 비공개
        li
            a(href="/users/list.do?permission=ADMIN") 관리자


    h2.my-4 유저 리스트
    table#userTable.table.table-striped.table-hover
        thead
            tr
                th 아이디
                //th 비밀번호
                th 이름
                //th 전화번호
                //th 이메일
                th 가입일
                th 생년월일
                th 성별
                th 주소
                //th 상세주소
                th 권한
                th.text-right 동작
        tbody
            each user in users
                tr
                    td #{user.u_id}
                    //td #{user.pw}
                    td #{user.name}
                    //td #{user.phone}
                    //td #{user.email}
                    td #{user.post_time.toLocaleDateString("ko")}
                    td #{user.birth.toLocaleDateString("ko")}
                    td #{user.gender}
                    td #{user.address}
                    //td #{user.detail_address}
                    td #{user.permission}
                    td.text-right
                        a.btn.btn-outline-primary.btn-sm(href=`/users/${user.u_id}/detail.do`) 상세

    nav
        ul
            li
                a(href=`?page=1`) 1
            li
                a(href=`?page=2`) 2
            li
                a(href=`?page=3`) 3
            li
                a(href=`?page=4`) 4
            li
                a(href=`?page=5`) 5
